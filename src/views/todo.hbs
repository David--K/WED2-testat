<h1>{{title}}</h1>
<div id="todo-create">
  <div id="messages">
    {{#each messages}}
      <p>{{this}}</p>
    {{/each}}
  </div>
    {{#if isCreate}}
      <form id="todo-form" action="/todo" method="POST">
        <input type="hidden" id="theme" name="theme" value="{{theme}}">
        <label id="title-label" for="title">Titel</label>
        <input type="text" id="title" name="title">
        <label id="description-label" for="description">Beschreibung</label>
        <textarea id="description" name="description" rows="4" cols="50"></textarea></br>
        <label id="importance-label" for="importance">Wichtigkeit</label>
        <fieldset id="importance">
          <input type="radio" value="1" name="importance">1</input>
          <input type="radio" value="2" name="importance">2</input>
          <input type="radio" value="3" name="importance">3</input>
          <input type="radio" value="4" name="importance">4</input>
          <input type="radio" value="5" name="importance">5</input>
        </fieldset></br>
        <label id="done-label" for="done">Erledigt bis</label>
        <input type="date" id="done" name="done"></br>
        <div id="submit"><input type="submit" value="Absenden"></div>
      </form>
    {{else}}
      {{#with todo}}
      <form id="todo-form" action="/todo" method="POST">
        <input type="hidden" id="id" name="id" value="{{_id}}">
        <input type="hidden" id="theme" name="theme" value="{{../theme}}">
        <label id="title-label" for="title">Titel</label>
        <input type="text" id="title" name="title" value="{{title}}">
        <label id="description-label" for="description">Beschreibung</label>
        <textarea id="description" name="description" rows="4" cols="50">{{description}}</textarea>
        <label id="importance-label" for="importance">Wichtigkeit</label>
        <fieldset id="importance">
          <input type="radio" value="1" name="importance" {{#equal importance 1 "checked"}}{{/equal}}>1</input>
          <input type="radio" value="2" name="importance" {{#equal importance 2 "checked"}}{{/equal}}>2</input>
          <input type="radio" value="3" name="importance" {{#equal importance 3 "checked"}}{{/equal}}>3</input>
          <input type="radio" value="4" name="importance" {{#equal importance 4 "checked"}}{{/equal}}>4</input>
          <input type="radio" value="5" name="importance" {{#equal importance 5 "checked"}}{{/equal}}>5</input>
        </fieldset></br>
        <label id="done-label" for="done">Erledigt bis</label>
        <input type="date" id="done" name="done" value="{{prepareDateForInput done}}">
        <label id="finished-label" for="finished">Erledigt</label>
        <input type="checkbox" id="finished" name="finished" value="true" {{#if finished}}checked{{/if}}>
        <div id="submit-edit"><input type="submit" value="Absenden"></div>
      </form>
      {{/with}}
    {{/if}}
  <a href="/?theme={{theme}}"><button>Cancel</button></a>
</div>
